<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.WeatherActivity">
        <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:id="@+id/tilSearch"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/searchCity"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/enterSearch"
                    android:hint="@string/label_search_city"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tilSearch"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/searchCity"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toEndOf="@+id/tilSearch"
                app:layout_constraintBottom_toBottomOf="@+id/tilSearch"
                app:layout_constraintTop_toTopOf="@+id/tilSearch"
                android:text="@string/label_search"
                android:layout_height="0dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCityList"
                app:layout_constraintTop_toBottomOf="@+id/tilSearch"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/noResults"
                app:layout_constraintTop_toBottomOf="@+id/tilSearch"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                app:layout_constraintVertical_bias="0.2"
                app:srcCompat="@drawable/sad_emoji"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
                app:layout_constraintTop_toBottomOf="@+id/noResults"
                android:layout_width="match_parent"
                android:text="@string/error_results"
                android:layout_marginTop="20dp"
                android:id="@+id/tvNoResults"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

        <android.support.constraint.Group
                android:id="@+id/noProducts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                app:constraint_referenced_ids="noResults,tvNoResults"/>
    </android.support.constraint.ConstraintLayout>
</layout>